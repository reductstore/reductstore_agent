#!/usr/bin/env bash
set -euo pipefail

if [ -t 2 ]; then YELLOW='\033[1;33m'; NC='\033[0m'; else YELLOW=''; NC=''; fi
echo -e "${YELLOW}[WARN] configuration-read disconnected; falling back to user/system config.${NC}" >&2

SERVICE="${SNAP_INSTANCE_NAME:-$SNAP_NAME}.recorder"
snapctl restart "$SERVICE" || true
