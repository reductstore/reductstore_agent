#!/usr/bin/env bash
set -euo pipefail

if [ -t 2 ]; then YELLOW='\033[1;33m'; NC='\033[0m'; else YELLOW=''; NC=''; fi
warn() { printf "%bWARN%b  %s\n" "$YELLOW" "$NC" "$*" >&2; }

warn "configuration-read plug disconnected; falling back to user/system config"

SERVICE="${SNAP_INSTANCE_NAME:-$SNAP_NAME}.recorder"
if ! snapctl restart "$SERVICE"; then
  warn "restart failed (service may be disabled)"
fi
